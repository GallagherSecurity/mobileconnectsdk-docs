<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.gallagher.mobileconnectsdksample.mobileconnectsdksample.CredentialsFragment"
    app:layoutManager="LinearLayoutManager"
    tools:context="com.gallagher.mobileconnectsdksample.mobileconnectsdksample.CredentialsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/credential_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:listitem="@layout/row_mobilecredential" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_credential_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_black_24dp" />
</RelativeLayout>

